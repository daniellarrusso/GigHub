@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "My Gigs";
}
<h2>My Upcoming Gigs</h2>
<ul class="gigs">
    @foreach (var gig in Model)
    {

        <li>
            <div class="date">
                <div class="month">@gig.GigDate.ToString("MMM")</div>
                <div class="day">@gig.GigDate.ToString("d ")</div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Venue

                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
               

                <div class="actions"><a href="@Url.Action("Edit","Gigs", new { id = gig.GigId })">Edit</a></div>

            </div>

        </li>

    }
</ul>

